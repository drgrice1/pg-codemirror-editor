{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["esnext", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "src/*": ["src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
